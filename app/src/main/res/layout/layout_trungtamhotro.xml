<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    android:theme="@style/CustomDrawerToggle">

    <FrameLayout
        android:id="@+id/themFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionBarSize"
            android:background="@color/colorWhite"
            >

            <ImageButton
                android:id="@+id/imgMenu"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/menu"
                android:background="@color/colorWhite"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/tvTenSP"
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorRed"
                android:text="Trung tâm hỗ trợ"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:textSize="15sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorRed"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="43dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chào mừng bạn đến trung tâm hỗ trợ"
                    android:textColor="@color/colorBlack"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:textSize="@dimen/sizeTenSP"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/custom_stroke_view">

                    <ImageView
                        android:id="@+id/imgClock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/clock"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giờ làm việc:"
                        android:textColor="@color/colorBlack"
                        android:layout_toRightOf="@id/imgClock"
                        android:layout_marginLeft="5dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imgClock"
                        android:layout_toRightOf="@id/imgClock"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thứ 2 - thứ 6"
                                android:textColor="@color/colorBlack"
                                android:textSize="13sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thứ 7"
                                android:textColor="@color/colorBlack"
                                android:textSize="13sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8h00 - 12h00, 13h00 - 17h00"
                                android:textColor="@color/colorRed"
                                android:textSize="13sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8h00 - 12h00"
                                android:textColor="@color/colorRed"
                                android:textSize="13sp"/>
                        </LinearLayout>


                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tìm hiểu cách sử dụng MOKI và liên hệ theo các kênh CSKH dưới đây"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:textColor="@color/colorBlack"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="@drawable/custom_stroke_view">

                    <RelativeLayout
                        android:id="@+id/relaHuongDanSD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginVertical="10dp"
                            android:text="Hướng dẫn sử dụng MOKI"
                            android:textColor="@color/colorBlack" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/next_black"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGreyish"/>

                    <RelativeLayout
                        android:id="@+id/relaChat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chat với bộ phần CSKH"
                            android:textColor="@color/colorBlack"
                            android:layout_marginVertical="10dp"/>

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/next_black"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/relaCall"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:background="@drawable/custom_button_dangnhap"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:text="Call: 1900.636.779"
                        android:drawableLeft="@drawable/phone_white"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:drawablePadding="10dp"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relaSendMail"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:background="@drawable/custom_button_dangnhap"
                    android:layout_marginHorizontal="15dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:text="Email: hotro@moki.vn"
                        android:drawableLeft="@drawable/mail_white"
                        android:gravity="center"
                        android:drawablePadding="10dp"
                        android:layout_centerInParent="true"
                        />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/moki_label"
                    android:text="Giúp các mẹ trao đổi"
                    android:textColor="@color/colorBlack"
                    android:layout_marginVertical="10dp"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tầng 10, Tòa nhà ZenTower, 12 Khuất Duy Tiến, Thanh Xuân, Hà Nội"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:layout_marginHorizontal="20dp"/>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </FrameLayout>

    <!--DrawerLayout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgKhachHang"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/user"
                />

            <TextView
                android:id="@+id/tvTenKhachHang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tieunt"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            >

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>