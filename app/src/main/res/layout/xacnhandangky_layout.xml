<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:theme="@style/ColorBlack">

    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Xác nhận đăng ký"
        app:titleTextColor="@color/colorRed"
        android:layout_gravity="center"
        >

    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã xác nhận được gửi vào điện thoại của bạn. Hãy nhập mã vào ô bên dưới"
        android:textSize="13sp"
        android:textAlignment="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="135dp"
        android:textColor="@color/colorBlack"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="25dp">

        <EditText
            android:id="@+id/edt1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="number"
            android:maxLength="1"
            android:digits="0123456789"
            android:background="@drawable/custom_edt_xacnhan"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            />

        <EditText
            android:id="@+id/edt2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="number"
            android:maxLength="1"
            android:digits="0123456789"
            android:background="@drawable/custom_edt_xacnhan"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            />

        <EditText
            android:id="@+id/edt3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="number"
            android:maxLength="1"
            android:digits="0123456789"
            android:background="@drawable/custom_edt_xacnhan"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            />

        <EditText
            android:id="@+id/edt4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="number"
            android:maxLength="1"
            android:digits="0123456789"
            android:background="@drawable/custom_edt_xacnhan"
            android:textAlignment="center"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btnGuiLai"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Gửi lại"
        android:textColor="@color/colorWhite"
        android:background="@drawable/custom_button_dangnhap"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        />

</LinearLayout>