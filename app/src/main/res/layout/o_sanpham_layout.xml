<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="225dp">
        <ImageView
            android:id="@+id/imgHinh"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            />

        <TextView
            android:id="@+id/tvTenSanPham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgHinh"
            android:layout_centerHorizontal="true"
            android:text="Xin chao" />

        <ImageView
            android:id="@+id/imgYeuThich"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/tvTenSanPham"
            android:background="@drawable/ic_favorite_border_black_24dp" />

        <TextView
            android:id="@+id/tvYeuThich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_below="@+id/tvTenSanPham"
            android:layout_toRightOf="@+id/imgYeuThich"
            android:layout_marginLeft="2dp"/>

        <ImageView
            android:id="@+id/imgComment"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_comment_black_24dp"
            android:layout_alignBottom="@id/tvYeuThich"
            android:layout_toRightOf="@+id/tvYeuThich"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:id="@+id/tvComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgComment"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/imgComment"
            android:text="0" />

        <TextView
            android:id="@+id/tvGia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tvComment"
            android:layout_alignParentRight="true"
            android:text="157 K"/>

    </RelativeLayout>


</LinearLayout>