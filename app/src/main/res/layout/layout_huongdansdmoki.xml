<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarSize"
        android:background="@color/colorWhite"
        >

        <ImageButton
            android:id="@+id/imgBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back"
            android:background="@color/colorWhite"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorRed"
            android:text="Các điều khoản sử dụng"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:textSize="15sp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorRed"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MOKI có thể điều chỉnh các điều khoản/quy định dưới đây mà không cần báo trước!"
                android:textAlignment="center"
                android:textSize="@dimen/sizeTenSP"
                android:textColor="@color/colorRed"
                android:padding="15dp"
                android:layout_marginHorizontal="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="25dp"
                android:background="@drawable/custom_stroke_view">

                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                    android:textSize="@dimen/sizeTenSP"
                    android:textColor="@color/colorBlack"
                android:drawableLeft="@drawable/book"
                android:drawablePadding="5dp"
                android:text="Hướng dẫn sử dụng MOKI"
                android:drawableRight="@drawable/next"
                android:gravity="center_vertical" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGreyish"
                    android:layout_marginHorizontal="15dp"/>

                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                    android:textSize="@dimen/sizeTenSP"
                    android:textColor="@color/colorBlack"
                android:drawableLeft="@drawable/question_mark"
                android:drawablePadding="5dp"
                android:text="Câu hỏi thường gặp"
                android:drawableRight="@drawable/next"
                android:gravity="center_vertical"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGreyish"
                    android:layout_marginHorizontal="15dp"/>

                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                    android:textSize="@dimen/sizeTenSP"
                    android:textColor="@color/colorBlack"
                android:padding="15dp"
                android:drawableLeft="@drawable/library"
                android:drawablePadding="5dp"
                android:text="Điều khoản sử dụng"
                android:drawableRight="@drawable/next"
                android:gravity="center_vertical"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGreyish"
                    android:layout_marginHorizontal="15dp"/>

                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                    android:textSize="@dimen/sizeTenSP"
                    android:textColor="@color/colorBlack"
                android:padding="15dp"
                android:drawableLeft="@drawable/policy"
                android:drawablePadding="5dp"
                android:text="Chính sách bảo mật"
                android:drawableRight="@drawable/next"
                android:gravity="center_vertical"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGreyish"
                    android:layout_marginHorizontal="15dp"/>

                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                    android:textSize="@dimen/sizeTenSP"
                    android:textColor="@color/colorBlack"
                android:padding="15dp"
                android:drawableLeft="@drawable/star"
                android:drawablePadding="5dp"
                android:text="Tiêu chuẩn cộng đồng"
                android:drawableRight="@drawable/next"
                android:gravity="center_vertical"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:drawableTop="@drawable/moki"
                android:text="Giúp các mẹ trao đổi"
                android:textColor="@color/colorBlack"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Tầng 6, 146 Hoàng Văn Thái, Thanh Xuân, Hà Nội"
                android:textColor="@color/colorBlack"
                android:layout_marginHorizontal="15dp"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>