<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/custom_layout_thayanhnen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="Thay ảnh nền"
            android:textAlignment="center"
            android:textColor="@color/colorRed"
            android:padding="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBlack"/>

        <TextView
            android:id="@+id/tvAnhTuThuVien"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="Ảnh từ thư viện"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:padding="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBlack"/>

        <TextView
            android:id="@+id/tvChupAnhMoi"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="Chụp ảnh mới"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:padding="10dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnDong"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="Đóng"
        android:textColor="@color/colorWhite"
        android:background="@color/colorRed"
        android:textAllCaps="false"
        android:textSize="16sp"/>

</LinearLayout>