<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relaNguoiBan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgInfoShop"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:src="@drawable/user"
                />

            <TextView
                android:id="@+id/tvTenShop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peppa Pig Shop"
                android:textColor="@color/colorRed"
                android:layout_marginLeft="5dp"
                android:textSize="16dp"
                android:layout_toRightOf="@+id/imgInfoShop"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/tvThoiGian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 giờ trước"
                android:drawableLeft="@drawable/clock"
                android:drawablePadding="5dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayoutSanPham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgSanPham"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/background1"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorRed">

                <TextView
                    android:id="@+id/tvTenSanPham"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bữa tiệc sinh nhật ngoài trời"
                    android:textColor="@color/colorWhite"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/tvGiaSP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="860,000 đ"
                    android:textColor="@color/colorWhite"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvMoTaSanPham"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Đồ chơi Lego Duplo 10832 - Bữa tiệc sinh nhật ngoài trời"
                android:textColor="@color/colorBlack"
                android:layout_margin="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:id="@+id/relaThich"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/custom_btnlike_list"
                android:layout_marginRight="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/like_white"
                        />
                    <TextView
                        android:id="@+id/tvThich"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:layout_centerVertical="true"
                        android:text="0"
                        android:textSize="16sp"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relaBinhLuan"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:background="@drawable/custom_btncomment_list">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/chat"
                        />
                    <TextView
                        android:id="@+id/tvBinhLuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:layout_centerVertical="true"
                        android:text="0"
                        android:textSize="16sp"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relaMua"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:background="@drawable/custom_btnmua_list">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bag"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
