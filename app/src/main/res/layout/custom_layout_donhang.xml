<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgHinhSP"
            android:layout_width="120dp"
            android:layout_height="135dp"
            android:src="@drawable/background"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imgHinhSP">
            <TextView
                android:id="@+id/tvTenSanPham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="Ao thun"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvGiaSP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTenSanPham"
                android:textSize="14sp"
                android:textColor="@color/colorRed"
                android:text="90 K"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_toRightOf="@id/imgHinhSP"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/linear">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="Thông tin nhận: "
                android:textSize="13sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvSoDT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="SDT: 0123456789"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tvDiaChi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="Dia Chi: Hoai Duc, Ha Noi"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tvNgayDat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="Ngày đặt: 06/06/2018"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tvNgayGiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="Ngày giao: đang xử lý"
                android:textSize="12sp" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>