<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    android:theme="@style/CustomDrawerToggle">

    <FrameLayout
        android:id="@+id/themFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionBarSize"
            android:background="@color/colorWhite"
            >

            <ImageButton
                android:id="@+id/imgMenu"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/menu"
                android:background="@color/colorWhite"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/tvTenSP"
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorRed"
                android:text="Thiết lập"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:textSize="15sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorRed"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="43dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorGreyish"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cài đặt tài khoản"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:background="@color/colorWhite"
                    android:padding="10dp"
                    android:textSize="@dimen/sizeTenSP"
                    />

                <!--Layout trang chủ-->
                <RelativeLayout
                    android:id="@+id/relaTrangCuaToi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:padding="15dp"
                    android:background="@color/colorWhite">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trang của tôi"
                        android:textColor="@color/colorBlack"
                        android:drawableLeft="@drawable/home"
                        android:gravity="center"
                        android:drawablePadding="15dp"
                        android:textSize="@dimen/sizeTenSP"

                        />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/next_black"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relaDiaChi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:padding="15dp"
                    android:background="@color/colorWhite">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Địa chỉ của tôi"
                        android:textColor="@color/colorBlack"
                        android:drawableLeft="@drawable/location_pin"
                        android:gravity="center"
                        android:drawablePadding="15dp"
                        android:textSize="@dimen/sizeTenSP"

                        />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/next_black"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relaDoiMatKhau"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:padding="15dp"
                    android:background="@color/colorWhite"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đổi mật khẩu"
                        android:textColor="@color/colorBlack"
                        android:drawableLeft="@drawable/password"
                        android:gravity="center"
                        android:drawablePadding="15dp"
                        android:textSize="@dimen/sizeTenSP"

                        />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/next_black"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relaDSChan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:padding="15dp"
                    android:background="@color/colorWhite"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Danh sách chặn"
                        android:textColor="@color/colorBlack"
                        android:drawableLeft="@drawable/note"
                        android:gravity="center"
                        android:drawablePadding="15dp"
                        android:textSize="@dimen/sizeTenSP"

                        />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/next_black"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thông tin tài khoản"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:background="@color/colorWhite"
                    android:padding="10dp"
                    android:textSize="@dimen/sizeTenSP"
                    android:layout_marginTop="1dp"
                    />

                <RelativeLayout
                    android:id="@+id/relaTaiKhoan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:padding="15dp"
                    android:background="@color/colorWhite"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tài khoản"
                        android:textColor="@color/colorBlack"
                        android:drawableLeft="@drawable/username"
                        android:gravity="center"
                        android:drawablePadding="15dp"
                        android:textSize="@dimen/sizeTenSP"

                        />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/next_black"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thông báo"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:background="@color/colorWhite"
                    android:padding="10dp"
                    android:textSize="@dimen/sizeTenSP"
                    android:layout_marginTop="1dp"
                    />


                <RelativeLayout
                    android:id="@+id/relaCaiDatThongBao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:padding="15dp"
                    android:background="@color/colorWhite"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cài đặt nhận thông báo"
                        android:textColor="@color/colorBlack"
                        android:drawableLeft="@drawable/settings"
                        android:gravity="center"
                        android:drawablePadding="15dp"
                        android:textSize="@dimen/sizeTenSP"

                        />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/next_black"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thông tin ứng dụng"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:background="@color/colorWhite"
                    android:padding="10dp"
                    android:textSize="@dimen/sizeTenSP"
                    android:layout_marginTop="1dp"
                    />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:padding="15dp"
                    android:background="@color/colorWhite"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phiên bản"
                        android:textColor="@color/colorBlack"
                        android:drawableLeft="@drawable/version"
                        android:gravity="center"
                        android:drawablePadding="15dp"
                        android:textSize="@dimen/sizeTenSP"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.0"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/colorRed"
                        android:textSize="@dimen/sizeTenSP"/>

                </RelativeLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </FrameLayout>

    <!--DrawerLayout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgKhachHang"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/user"
                />

            <TextView
                android:id="@+id/tvTenKhachHang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xin chào"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            >

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>