<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:id="@+id/camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        >
        <ImageButton
            android:layout_width="@dimen/iconCamera42"
            android:layout_height="@dimen/iconCamera42"
            android:id="@+id/imgClose"
            android:background="@drawable/cancel"
            />

        <ToggleButton
            android:id="@+id/tgFlash"
            android:layout_width="@dimen/iconCamera42"
            android:layout_height="@dimen/iconCamera42"
            android:background="@drawable/custom_iconflash_camera"
            android:textOff=""
            android:textOn=""
            android:layout_alignParentRight="true"
            android:layout_marginRight="64dp"
            />

        <ImageButton
            android:id="@+id/imgRotateCamera"
            android:layout_width="@dimen/iconCamera42"
            android:layout_height="@dimen/iconCamera42"
            android:background="@drawable/rotate_camera"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="@color/colorRed">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorWhite"/>

        <ImageButton
            android:id="@+id/imgGallery"
            android:layout_width="@dimen/iconCamera42"
            android:layout_height="@dimen/iconCamera42"
            android:src="@drawable/gallery"
            android:background="@color/colorRed"
            android:layout_marginLeft="24dp"
            android:layout_centerVertical="true"
            />

        <RelativeLayout
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp">

            <ToggleButton
                android:id="@+id/tgSwitchCameraVideo"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="@drawable/custom_toggle_camera_video"
                android:textOff=""
                android:textOn=""
                />

            <ImageButton
                android:id="@+id/imgCamera"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/photo_camera24"
                android:layout_below="@+id/tgSwitchCameraVideo"
                android:background="@color/colorRed"/>

            <ImageButton
                android:id="@+id/imgVideo"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/video_camera24"
                android:layout_below="@+id/tgSwitchCameraVideo"
                android:layout_alignParentRight="true"
                android:background="@color/colorRed"
                />
        </RelativeLayout>

    </RelativeLayout>

    <ImageButton
        android:id="@+id/imgChupAnh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:src="@drawable/photo_camera"
        android:background="@drawable/custom_camera_trangchu"/>

    <ImageView
        android:id="@+id/imgHinhA"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"/>

</FrameLayout>