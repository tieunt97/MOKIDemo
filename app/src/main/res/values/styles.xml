<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorRed</item>
        <item name="android:textColorPrimary">@color/colorRed</item>
    </style>
    
    <style name="ColorBlack" parent="AppTheme">
        <item name="android:textColorPrimary">@color/colorBlack</item>
    </style>
    
    <style name="CustomDrawerToggle" parent="AppTheme">
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="drawerArrowStyle">@style/changeColorDrawerToggle</item>
    </style>

    <style name="changeColorDrawerToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorRed</item>
    </style>

    <style name="textColorEdtBinhLuan" parent="AppTheme">
        <item name="colorAccent">@color/colorWhite</item>
    </style>

</resources>
